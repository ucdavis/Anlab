@using AnlabMvc.Models.Roles
@using AnlabMvc.Models.User
@model AnlabMvc.Models.User.UserRolesModel

@{
    ViewData["Title"] = "Edit Admin Roles";
}

<div class="col">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt>
            Sign In Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>


    @await Html.PartialAsync("_EditAdminForm", new EditAdminModel { User = Model.User, RoleCode = RoleCodes.Admin, IsActive = Model.IsAdmin })
    @await Html.PartialAsync("_EditAdminForm", new EditAdminModel { User = Model.User, RoleCode = RoleCodes.LabUser, IsActive = Model.IsLabUser })
    @await Html.PartialAsync("_EditAdminForm", new EditAdminModel { User = Model.User, RoleCode = RoleCodes.Reports, IsActive = Model.IsReports })



    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

