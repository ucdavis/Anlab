@using AnlabMvc.Models.SystemAlertModels
@model SystemAlertEditModel

@{
    ViewBag.Title = "Create Alert";
}

<div class="col">
    <form asp-action="Create">
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Markdown" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Markdown" class="form-control" rows="10"> </textarea>
                    <span asp-validation-for="Markdown" class="text-danger"></span>
                    <div>
                        <small>To see basic commands on how markdown works, google Markdown cheat sheet. Not all options are supported with the markdown library we use but most are. You may also add in html, but we recommend that you don't.</small>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Danger" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Danger" class="form-control" />
                    <div>
                        <small>Uses the Red alert.</small>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
