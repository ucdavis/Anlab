@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@using AnlabMvc.Helpers
@using AnlabMvc.Models.Roles
<!DOCTYPE html>
<html>
<head>
    <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-ME0HQ36EH9"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-ME0HQ36EH9');
</script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5.3.3 CSS -->
    <environment names="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    
    <!-- Bootstrap 3 to 5 Compatibility Styles -->
    <link rel="stylesheet" href="~/css/bootstrap-compatibility.css" />
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css"/>
    <react-styles />
    <link rel="shortcut icon" href="/media/favicon.ico">
    @RenderSection("AdditionalStyles", required: false)
</head>
<body>
    <header>
        @if(Configuration["Environment:ShowTestBanner"] == "Yes"){
            <h1 style="background-color: red; text-align: center; color: white">-----------!!! TEST SITE -- TEST SITE -- TEST SITE !!! -----------</h1>
        }
        <div class="header_contents">
            <div class="logo_wrapper">
                <a href="https://anlab.ucdavis.edu"><img class="img-respo" src="/media/anlab_2025.svg" alt="Anlab logo"></a>
            </div>
            <div class="login_wrapper">
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </header>
    <div class="head_bleed">
        <div class="head_divider">
            <div class="header_contents">
            <nav class="navbar navbar-expand-md">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" asp-controller="Analysis" asp-action="Index">Testing Services</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Orders / Browse Prices</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">Your Orders</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Favorites">Saved Orders</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Create">Create Order</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Create" asp-route-browsePrices=true>Browse Prices</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Profile" asp-action="Edit" title="Manage">Edit Profile</a></li>
                                </ul>
                            </li>
                            @if (User != null && (User.IsInRole(RoleCodes.Admin) || User.IsInRole(RoleCodes.LabUser)))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Lab" asp-action="Orders">Orders</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ListClients">Clients</a></li>
                                        @if (User.IsInRole(RoleCodes.Admin))
                                        {
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin Users</a></li>
                                        }
                                        <li><a class="dropdown-item" asp-controller="Lab" asp-action="DisposalList">Disposal List</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="MailQueue" asp-route-allFailed="true">Mail Failures</a></li>

                                        @if (User.IsInRole(RoleCodes.Admin))
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" asp-controller="TestItems" asp-action="Index">Test Codes</a></li>
                                            <li><a class="dropdown-item" asp-controller="AdminAnalysis" asp-action="Index">Method Summaries</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        <li><a class="dropdown-item" href="https://caeshelp.ucdavis.edu/?appname=Anlab" target="_blank">Technical Support</a></li>
                                        <li><a class="dropdown-item" asp-controller="Lab" asp-action="Search">Search Order</a></li>
                                    </ul>
                                </li>
                            }
                            @if (User != null && (User.IsInRole(RoleCodes.Admin) || User.IsInRole(RoleCodes.Reports)))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Reviewers</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="Index">Review Orders</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="Totals">Totals</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="Adjustments">Adjustments</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="EmailList">Email Report</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="OrdersWithSkippedFinalEmail">Orders with Skipped Emails</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="HistoricalSales">Historical Sales</a></li>
                                    </ul>
                                </li>
                            }
                            @if (Configuration["Environment:ShowTestBanner"] == "Yes")
                            {
                                <li class="nav-item"><a class="nav-link" href="https://anlab.sf.ucdavis.edu/contact-us">Contact</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" href="https://anlab.ucdavis.edu/contact-us">Contact</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            </div>
        </div>
    </div> <!-- head bleed-->
    <div class="pagetitle_banner">
        <div class="pagetitle_banner_contents">
            <div class="title-left"><h1>@ViewData["Title"]</h1></div>
            <div class="title-right">
                @RenderSection("ActionButtons", required: false)
            </div>

        </div>
    </div>
    <div class="boundary">
        @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                @TempData["ErrorMessage"]
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
        {
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                @TempData["Message"]
            </div>
        }
        <div class="row whiteblock">
            @RenderBody()
        </div>

    </div>
    <footer>
        <div class="footer_contents">
            <p class="discreet">
                &copy; The Regents of the University of California, Davis campus, 2017-@(DateTime.UtcNow.Date.ToString("yy")).
            </p>
            <p class="discreet">Version: @VersionFinder.Version </p>
            <br />
            <br />
            <br />
        </div>
    </footer>

    @RenderSection("ScriptVariables", required: false)

    <!-- jQuery (latest version) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-3.4.1.min.js"></script>
    
    <!-- Bootstrap 5.3.3 JavaScript Bundle -->
    <environment names="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </environment>

    <!-- Bootstrap 3 to 5 Compatibility Script -->
    <script src="~/js/bootstrap-compatibility.js"></script>

    <react-scripts />

    @RenderSection("Scripts", required: false)
</body>
</html>
